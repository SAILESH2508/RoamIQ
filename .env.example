 
 # Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
DEBUG=True
FLASK_ENV=development

# Database
DATABASE_URL=sqlite:///roamiq.db

# ===========================================
# GEN AI LLM CONFIGURATION
# ===========================================

# Multi-Provider AI APIs
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-gemini-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Local AI Models
OLLAMA_BASE_URL=http://localhost:11434
ENABLE_LOCAL_MODELS=false
LOCAL_MODEL_PATH=./models

# Default LLM Configuration
DEFAULT_LLM_MODEL=gpt-3.5-turbo
FALLBACK_MODEL=claude-3-haiku
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_P=0.9

# Advanced AI Features
ENABLE_RAG=true
ENABLE_IMAGE_PROCESSING=true
ENABLE_AUDIO_PROCESSING=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_WEB_SCRAPING=true

# Embedding & Vector Database
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_PATH=./backend/data/chroma_db
FAISS_INDEX_PATH=./backend/data/faiss_index

# Image AI Models
IMAGE_CAPTION_MODEL=Salesforce/blip-image-captioning-base
IMAGE_SIMILARITY_MODEL=openai/clip-vit-base-patch32
ENABLE_VISION_MODELS=true

# Audio AI Models
SPEECH_TO_TEXT_MODEL=whisper-base
TEXT_TO_SPEECH_ENGINE=gtts
ENABLE_VOICE_CHAT=true

# Document Processing
MAX_DOCUMENT_SIZE=50MB
SUPPORTED_FORMATS=pdf,docx,txt,csv,xlsx

# ===========================================
# EXTERNAL APIs & INTEGRATIONS
# ===========================================

WEATHER_API_KEY=your-weather-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
AMADEUS_API_KEY=your-amadeus-api-key-here
AMADEUS_API_SECRET=your-amadeus-secret-here
UNSPLASH_ACCESS_KEY=your-unsplash-key-here

# Travel Data APIs
TRIPADVISOR_API_KEY=your-tripadvisor-api-key-here
BOOKING_API_KEY=your-booking-api-key-here
SKYSCANNER_API_KEY=your-skyscanner-api-key-here

# ===========================================
# INFRASTRUCTURE & PERFORMANCE
# ===========================================

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=3600
ENABLE_RESPONSE_CACHING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
AI_RATE_LIMIT=50

# Security & CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JWT_ACCESS_TOKEN_EXPIRES=86400
API_KEY_ENCRYPTION=true

# Logging & Monitoring
LOG_LEVEL=INFO
LOG_FILE=backend_error.log
ENABLE_METRICS=true
ENABLE_TRACING=true

# WebSocket Configuration
SOCKETIO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ENABLE_REALTIME_STREAMING=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Database (Production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=roamiq_prod
POSTGRES_USER=roamiq_user
POSTGRES_PASSWORD=your-postgres-password-here

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_S3_BUCKET=roamiq-storage
AWS_REGION=us-east-1

# CDN Configuration
CLOUDFLARE_API_KEY=your-cloudflare-api-key-here
CDN_URL=https://cdn.roamiq.com