{
    "version": 2,
    "name": "roamiq",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "installCommand": "npm install --legacy-peer-deps"
            }
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1",
            "check": true
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.11",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
}