{
    "version": 2,
    "name": "roamiq",
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1",
            "check": true
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.11"
    }
}